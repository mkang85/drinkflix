
<%=form_for [@film, @review] do |f|%>
<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@review.errors.count, "error") %>
      prohibited this review from being saved:
    </h2>

    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%=f.label :title%>
<%=f.text_field :title%><br  /><br />

<%=f.label :content%><br />
<%=f.text_area :content%><br  />

<%=f.hidden_field :film_id%>
<%=f.hidden_field :user_id%><br />

<%= "Drinks:"%><br />
<%= f.fields_for :drink, @film.drinks.build do |drinks_fields|%>
  <%=f.label :amount%>
  <%=drinks_fields.text_field :amount%>
  <%=f.label :name%>
  <%=drinks_fields.text_field :name %><br  />
<%end%><br  />

<%=f.submit "Submit"%>

<%end%>
